<div class="span3">
  <%= render 'shared/nav' %>
</div><!-- //span3 -->

<div class="span9">
  <% if !current_user.subscriber? %>
  <div class="tip-box">
    <h3>Become a subscriber to start the conversation</h3>
    <%= image_tag "mail-icon.png", width: "55px" %>
    <p class="conv-header">
      Become a subscriber on Friendskis to begin sending unlimited messages. 
      Unlike other dating sites, anyone can reply for free! <strong><%= link_to 'Join now!', '#', onclick: "buySubscription('#{subscription_url(v: SUBSCRIPTION_VERSION)}');" %></strong>
    </p>
  </div><!-- //tip-box --> 
  <% end %>
  <div id="conversations">
    <div class='header'>
      <h3>Your Conversations</h3>
    </div>
    <% if @conversations.any? %>
      <% @conversations.each do |conversation| %>
      <div class='conversation'>
        <% if conversation.messages.last.user == current_user %>
          <%= render 'user_alt', conversation: conversation %>
        <% else %>
          <%= render 'user_alt_two', conversation: conversation %>
        <% end %>
      </div><!-- /conversation -->
      <% end %>
    <% else %>
    <div class="empty-conversations">
      You have no messages!
    </div>
    <% end %>
  </div><!-- /conversations -->
</div><!-- //span9 -->
