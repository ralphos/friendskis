<div class="span3">
  <%= render 'nav' %>
</div><!-- //span3 -->

<div class="span9">
  
  <div class='select-album'>
    <h3>Add a caption to your profile picture</h3>
    <%#= link_to 'Back to photos', albums_path, class: 'uibutton icon prev' %>
  </div>

  <div class="photo">
    <%= image_tag @photo_url["medium_url"] %>
  </div>

    <%= form_for @photo, url: photos_path, html: { class: 'form-stacked' } do |f| %>

      
      <%= f.hidden_field :tiny_url, value: @photo_url["tiny_url"] %>
      <%= f.hidden_field :thumbnail_url, value: @photo_url["thumbnail_url"] %>
      <%= f.hidden_field :medium_url, value: @photo_url["medium_url"] %>
      <%= f.hidden_field :profile_pic, value: true %>
      
      <div class='caption-label'>
        <%= f.label :caption, 'Add a caption' %>
      </div>
      <div class='field'>
        <%= f.text_field :caption, class: 'xlarge' %>
      </div>

      <div class='wizard-done'>
        <%= f.submit "I'm done! Let's make some friends!", class: 'uibutton large special' %>
      </div>
    <% end %>

</div><!-- //span9 -->
