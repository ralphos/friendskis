<%= form_for @user, url: setup_path do |f| %>

  <h2>Pick a username</h2>
  <hr>
  <p>Choose a username so we can keep your identity on Facebook anonymous.</p>
  <div class="field">
    <%= f.text_field :username, placeholder: "Your username" %>
  </div>
  <h2>Confirm your Birthday</h2>
  <hr>
  <p>Confirm your birthdate so other people can find you based on your age.</p>
  <div class="field">
    <%= f.date_select :date_of_birth, start_year: 1900, end_year: Date.today.year %>
  </div>
  <h2>What are you looking for?</h2>
  <hr>
  <p>Tell us what kind of person you'd be interested in friending.</p>
  <div class="field">
    <div>
    I'm a <%= f.select(:preference, { "woman seeking man" => 1, "man seeking woman" => 2 }) %>
    </div>
    <div>
      between ages <%= f.select(:min_age, (18..99).to_a) %> and <%= f.select(:max_age, (18..99).to_a) %>
    </div>
    <div>
      near <%= f.text_field :location, placeholder: "Enter your location" %>  
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Next step: Add a profile photo" %>
  </div>
  
<% end %>