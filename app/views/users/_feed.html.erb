<div class='post'>
  <div class='profile-pic-tiny'>
    <%= link_to image_tag(profile_pic_tiny(photo.user)), user_path(photo.user) %>
  </div><!-- /profile-pic-tiny -->
  <div class='main-post-content'>
    <div class='name-age-gender'>
      <h5>
        <%= link_to photo.user.username, user_path(photo.user) %>
        <span><%= photo.user.age %> Â· <%= display_sex(photo.user) %></span>
      <h5>
    </div><!-- /name-age-gender -->
    <div class='post-content'>
      <%= image_tag photo.medium_url %>
    </div><!-- /post-content -->
    <div class='post-caption'>
      <%= photo.caption %>
    </div><!-- /post-caption -->
    <div class='send-message'>
      <% if photo.user != current_user %>
      <a href="#">Send Message</a>
      <% end %>
    </div><!-- /send-message -->
  </div><!-- /main-post-content -->
</div><!-- /post -->
